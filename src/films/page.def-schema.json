{
  "type": "object",
  "required": ["url", "provider", "films"],
  "additionalProperties": false,
  "properties": {
    "provider": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "films": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "sessions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    },
    "availability": {
      "type": "string"
    }
  },
  "anyOf": [
    {
      "required": ["sessions"]
    },
    {
      "required": ["availability"]
    }
  ]
}
